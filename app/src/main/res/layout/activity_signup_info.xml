<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="#fff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원정보 입력"
        android:fontFamily="@font/hanna_11"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="110dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginRight="20dp"/>

    <TextView android:layout_width="wrap_content"
        android:fontFamily="@font/hanna_11"
        android:layout_height="wrap_content"
        android:text="여러분의 정보, 혼밥이에게 알려줄레요?"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="63dp"
        android:gravity="center"
        android:textColor="#6c6b6b"
        android:textSize="15dp"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:layout_gravity="center"
        android:fontFamily="@font/hanna_11"
        android:gravity="center"
        android:layout_marginRight="170dp"
        android:textColor="#6c6b6b"
        android:textSize="15dp"
        android:layout_marginTop="30dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="360dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:layout_height="50dp"
        android:background="@drawable/textinput_login"
        android:layout_marginTop="5dp">
        <EditText
            android:fontFamily="@font/hanna_11"
            android:id="@+id/name_tv"
            android:textColor="#000"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생년월일"
        android:layout_gravity="center"
        android:layout_marginRight="155dp"
        android:fontFamily="@font/hanna_11"
        android:gravity="center"
        android:textColor="#6c6b6b"
        android:textSize="15dp"
        android:layout_marginTop="20dp" />

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:id="@+id/birt_rel"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        app:hintEnabled="true"
        android:layout_height="50dp"
        android:background="@drawable/textinput_login">

        <TextView
            android:gravity="center|left"
            android:textColor="#000"
            android:textSize="20dp"
            android:fontFamily="@font/hanna_11"
            android:id="@+id/birth_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/date_picker"
            android:src="@drawable/ic_calander"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </RelativeLayout>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호"
        android:layout_gravity="center"
        android:layout_marginRight="155dp"
        android:fontFamily="@font/hanna_11"
        android:gravity="center"
        android:textColor="#6c6b6b"
        android:textSize="15dp"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="360dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        app:hintEnabled="true"
        android:focusable="false"
        android:clickable="false"
        android:layout_height="50dp"
        android:background="@drawable/textinput_locked">
        <EditText
            android:id="@+id/ph_tv"
            android:fontFamily="@font/hanna_11"
            android:textColor="#000"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Mail"
        android:layout_gravity="center"
        android:layout_marginRight="155dp"
        android:fontFamily="@font/hanna_11"
        android:gravity="center"
        android:textColor="#6c6b6b"
        android:textSize="15dp"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="360dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        app:hintEnabled="true"
        android:layout_height="50dp"
        android:background="@drawable/textinput_login">
        <EditText
            android:fontFamily="@font/hanna_11"
            android:id="@+id/email_tv"
            android:textColor="#000"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별"
            android:layout_gravity="center"
            android:layout_marginRight="160dp"
            android:fontFamily="@font/hanna_11"
            android:gravity="center"
            android:textColor="#6c6b6b"
            android:layout_marginBottom="10dp"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_marginLeft="30dp"
                    android:id="@+id/boy_btn"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/textinput_login"
                    android:text="남"
                    android:fontFamily="@font/hanna_11"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/girl_btn"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/textinput_login"
                    android:fontFamily="@font/hanna_11"
                    android:gravity="center"
                    android:text="여"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

    <Button
        android:id="@+id/next_btn"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/signup_btn"
        android:layout_width="360dp"
        android:layout_gravity="center"
        android:text="다음"
        android:gravity="center"
        android:fontFamily="@font/hanna_11"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:layout_height="50dp"/>

        <View
            android:id="@+id/first_key"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/keyboard_index"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="190dp">
                <TextView
                    android:gravity="center|bottom"
                    android:text="2020, team kid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>