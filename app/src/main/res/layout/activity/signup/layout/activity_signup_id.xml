<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 생성"
            android:fontFamily="@font/hanna_11"
            android:layout_marginEnd="115dp"
            android:layout_marginTop="110dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginRight="20dp"
            />

        <TextView android:layout_width="wrap_content"
            android:fontFamily="@font/hanna_11"
            android:layout_height="wrap_content"
            android:text="자신만의 멋진 아이디를 만들어보세요!"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="70dp"
            android:gravity="center"
            android:textColor="#6c6b6b"
            android:textSize="15dp"
            />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:layout_gravity="center"
            android:fontFamily="@font/hanna_11"
            android:gravity="center"
            android:layout_marginRight="170dp"
            android:textColor="#6c6b6b"
            android:textSize="15dp"
            android:layout_marginTop="30dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/id_ti"
            android:layout_width="360dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:layout_height="50dp"
            android:background="@drawable/textinput_login"
            android:layout_marginTop="5dp">
            <EditText
                android:id="@+id/id_tv"
                android:textColor="#000"
                android:fontFamily="@font/hanna_11"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/duplicate_chk_btn"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/signup_btn"
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:text="증복확인"
            android:gravity="center"
            android:fontFamily="@font/hanna_11"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_height="30dp"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:layout_gravity="center"
            android:layout_marginRight="155dp"
            android:fontFamily="@font/hanna_11"
            android:gravity="center"
            android:textColor="#6c6b6b"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="360dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            app:hintEnabled="true"
            android:layout_height="50dp"
            android:background="@drawable/textinput_login">
            <EditText
                android:id="@+id/pw_tv"
                android:inputType="textPassword"
                android:textColor="#000"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인"
            android:layout_gravity="center"
            android:layout_marginRight="138dp"
            android:fontFamily="@font/hanna_11"
            android:gravity="center"
            android:textColor="#6c6b6b"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="360dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            app:hintEnabled="true"
            android:layout_height="50dp"
            android:background="@drawable/textinput_login">
            <EditText
                android:id="@+id/pw_chk_tv"
                android:inputType="textPassword"
                android:textColor="#000"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:fontFamily="@font/hanna_11"
            android:id="@+id/chk_tv"
            android:layout_marginTop="10dp"
            android:gravity="center|right"
            android:layout_marginEnd="30dp"
            android:textColor="#000"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/next_btn"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/signup_btn"
            android:layout_width="360dp"
            android:layout_gravity="center"
            android:text="다음"
            android:gravity="center"
            android:fontFamily="@font/hanna_11"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_height="50dp"/>

    </LinearLayout>
</ScrollView>